<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhatsopWebAndorid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/lighter_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#2a7c4f</item>
        <item name="colorSecondaryVariant">#2a7c4f</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight">
        <item name="android:colorPrimary">@color/main_orange</item>
        <item name="android:colorAccent">#B18C32</item>
        <!-- Add other style attributes for dark mode -->
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowBackground">@color/lighter_orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>
</resources>